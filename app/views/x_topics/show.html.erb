<div class="prose">
  <h4><%= @x_topic.title %></h4>
  <ul>
    <% @x_topic.queries.each do |q| %>
      <li><%= q %></li>
    <% end %>
  </ul>
</div>

<%= turbo_frame_tag "posts", src: x_topic_posts_path(@x_topic), loading: "lazy" %>

<div>
  <%= link_to "Edit this x topic", edit_x_topic_path(@x_topic) %>
  |
  <%= link_to "Back to x topics", x_topics_path %>

  <%= button_to "Destroy this x topic", @x_topic, method: :delete %>
</div>
